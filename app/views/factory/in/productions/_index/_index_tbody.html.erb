<td>
  <div class="is-several">
    <%= image_tag model.product.logo.variant(resize_to_limit: [24, 24]), class: 'image is-24x24' if model.product.logo.attached? %>
    <span><%= model.name %></span>
  </div>
</td>
<td><%= model.organ.name %></td>
<td>
  <table class="table is-borderless">
  <% model.parts.each do |part| %>
    <tr>
      <td><span class="tag"><%= link_to part.name, { controller: 'products', action: 'show', id: part.id } %></span></td>
      <td><%# part.price %></td>
    </tr>
  <% end %>
  </table>
</td>
<td><%= model.price.to_money.format.html_safe %></td>
<td class="has-text-centered">
  <%= render partial: 'cart', locals: { model: model } %>
</td>
<td>
  <%# link_to({ controller: 'productions', action: 'part', id: model.id }, aria: { label: t('factory.admin.productions.part.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-regular fa-cube"></i>
  <%# end %>
</td>
