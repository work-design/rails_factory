<td>
  <div class="is-several">
    <%= image_tag model.provider.logo, class: 'image is-24x24' if model.provider.logo.attached? %>
    <span><%= model.provider.name %></span>
  </div>
</td>
<td>
  <%= button_to({ action: 'destroy', id: model.id }, method: :delete, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.confirm'), turbo_scroll: true } }) do %>
    <i class="fa-solid fa-trash has-text-danger"></i>
    <span class="pl-1">移除供应商</span>
  <% end %>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
