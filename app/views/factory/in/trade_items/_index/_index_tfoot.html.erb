<tfoot>
  <tr>
    <th colspan="3"></th>
    <th><%= @trade_items.sum(&->(i){ i.amount.to_d }) %></th>
    <th colspan="3"></th>
    <th id="payment_button">
      <%= button_to({ controller: 'payments', action: 'create', organ_id: params[:organ_id] }, class: 'button is-success') do %>
        <i class="fa-regular fa-credit-card"></i>
        <span class="pl-1"><%= t('.pay') %></span>
      <% end %>
    </th>
  </tr>
</tfoot>
