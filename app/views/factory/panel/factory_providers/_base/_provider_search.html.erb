<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">供应商</label>
  </div>
  <div class="field-body">
    <div class="panel" data-controller="typer" data-typer-url-value="<%= url_for(action: 'search') %>">
      <%= f.hidden_field :provider_id, data: { typer_target: 'value' } %>
      <div class="control has-icons-left">
        <%= search_field_tag 'name-like', nil, class: 'input', placeholder: '搜索', autocomplete: 'off', data: { typer_target: 'input' } %>
        <span class="icon is-left"><i class="fa-solid fa-search"></i></span>
      </div>
      <div class="panel" id="providers_content"></div>
    </div>
  </div>
</div>
