<div class="card">
  <div class="card-content text-centered">
    <div class="is-several">
      <%= image_tag model.logo.variant(resize_to_limit: [24, 24]), class: 'image' if model.logo.attached? %>
      <%= link_to model.name, { action: 'show', id: model.id } %>
    </div>
    <p>
      <strong class="text-danger"><%= model.price.to_money.format.html_safe %></strong>
    </p>
  </div>
  <div class="card-footer py-2">
    <%= yield %>
  </div>
</div>
