<div class="card">
  <div class="card-content has-text-centered">
    <h2 class="title color-danger"><%= model.price.to_money.format.html_safe %></h2>
    <%= link_to model.name, { action: 'show', id: model.id } %>
  </div>
  <div class="card-footer py-2">
  <% if @cart %>
    <%= render partial: 'cart', locals: { cart: @cart, item_con: item_con, item: @cart.init_cart_item(params, good_id: model.id) } %>
  <% end %>
  </div>
</div>
