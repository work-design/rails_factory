<div class="card">
  <div class="card-content">
    <%= link_to({ action: 'show', id: model.id }, params: { dispatch: params[:dispatch] || current_organ.dispatch }, class: 'is-several') do %>
      <%= image_tag model.logo.variant(resize_to_limit: [24, 24]), class: 'image' if model.logo.attached? %>
      <%= link_to model.title, { action: 'show', id: model.id } %>
    <% end %>
    <p>
      <strong class="text-danger"><%= model.price.to_money.format.html_safe %></strong>
    </p>
  </div>
  <div class="card-footer py-2">
    <%= yield %>
  </div>
</div>
