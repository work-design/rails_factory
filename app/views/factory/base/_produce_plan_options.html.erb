<%= link_to({ controller: 'productions', produce_on: params[:produce_on], scene_id: scene.id }, class: 'column is-half-mobile has-text-grey') do %>
  <div class="weui-grid__icon"><%= image_tag scene.logo if scene.logo.attached? %></div>
  <p class="weui-grid__label <%= scene.id == params[:scene_id] ? 'has-text-success' : 'has-text-grey' %>"><%= scene.title %></p>
  <p class="is-size-7">
    <span>预定截止：</span>
    <time><%= extra_distance_date(params[:produce_on]) %></time>
    <time><%= scene.book_finish_at.to_s(:time) %></time>
  </p>
  <p class="is-size-7">
    <span>配送时间：</span>
    <time><%= scene.deliver_start_at.to_s(:time) %></time>
    <span>~</span>
    <time><%= scene.deliver_finish_at.to_s(:time) %></time>
  </p>
<% end %>
