<div class="weui-panel weui-panel_access">
  <div class="weui-panel__hd">
    <%= @product.name %>
  </div>
  <div class="weui-panel__bd">
    <% @product_plans.each do |product_plan| %>
      <%= link_to product_path(@product, product_plan_id: product_plan.id), class: 'media' do %>
        <div class="media-left">
          <%= image_tag @product.logo, class: 'image is-64x64' if @product.logo.attached? %>
        </div>
        <div class="media-content">
          <h4 class="weui-media-box__title">
            <time data-controller="time"><%= product_plan.start_at.to_fs(:iso8601) %></time>
            <span>-</span>
            <time data-controller="time"><%= product_plan.finish_at.to_fs(:iso8601) %></time>
          </h4>
          <p class="weui-media-box__desc">
            <%= product_plan.state_i18n %>
          </p>
          <ul class="weui-media-box__info">
            <li class="weui-media-box__info__meta"><%= @product.reference_price %></li>
            <li class="weui-media-box__info__meta"></li>
            <li class="weui-media-box__info__meta weui-media-box__info__meta_extra">其它信息</li>
          </ul>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
