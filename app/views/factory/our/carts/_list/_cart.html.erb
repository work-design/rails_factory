<div class="field has-addons">
  <div class="control">
    <%= button_to({ controller: 'trade/our/items', action: 'update', id: item.id }, method: :patch, state: 'redirect_return', params: { '[item]number': item.number - 1 }, data: { turbo_scroll: true }, class: 'mr-1') do %>
      <i class="fa-solid fa-circle-minus fa-xl has-text-grey"></i>
    <% end if item.number > 1 %>
  </div>
  <div class="control">
    <%= button_to({ controller: 'trade/our/items', action: 'destroy', id: item.id }, method: :delete, state: 'redirect_return', data: { turbo_scroll: true }, class: 'mr-1') do %>
      <i class="fa-solid fa-circle-minus fa-xl has-text-grey"></i>
    <% end if item.number <= 1 %>
  </div>
  <div class="control">
    <%= form_with(theme: nil, url: { controller: 'trade/our/items', action: 'update', id: item.id }, method: :patch, state: 'redirect_return', data: { turbo_scroll: true, controller: 'input' }) do |f| %>
      <%= f.number_field :number, value: item.number, data: { action: 'change->input#form' }, class: 'has-background-light has-text-centered', style: 'width: 30px' %>
    <% end %>
  </div>
  <div class="control">
    <%= button_to({ controller: 'trade/our/items', action: 'update', id: item.id }, method: :patch, state: 'redirect_return', params: { '[item]number': item.number + 1 }, data: { turbo_scroll: true }, class: 'ml-1') do %>
      <i class="fa-solid fa-circle-plus fa-xl has-text-dark-grey"></i>
    <% end %>
  </div>
</div>
