<div class="weui-tabbar weui-tabbar_fixed">
  <div data-controller="weui-dialog" data-weui-dialog-id-value="dialog" data-action="click->weui-dialog#toggle" class="weui-tabbar__item">
    <i class="fa-pot-food weui-tabbar__icon <%= active_helper(controllers: 'products', item: 'fa-light', active: 'fa-solid has-text-success fa-flash') %>"></i>
    <div class="<%= active_helper(controllers: 'products', item: 'weui-tabbar__label', active: 'weui-tabbar__label has-text-success') %>"><%= t('factory.products.index.title') %></div>
  </div>
  <%= link_to({ controller: 'trade/my/carts', action: 'show' }, class: 'weui-tabbar__item') do %>
    <i class="fa-light fa-cart-shopping weui-tabbar__icon">
      <span class="weui-badge" style="right: 1em"><%= current_cart_count %></span>
    </i>
    <div class="weui-tabbar__label">购物车</div>
  <% end %>
</div>
