<div class="level-left is-flex pl-4">
  <%= link_to({ controller: 'trade/my/carts', action: 'show' }, class: 'fa-layers fa-fw fa-2x level-item') do %>
    <i class="fa-solid fa-bag-shopping"></i>
    <span class="fa-layers-counter"><%= current_cart_count %></span>
  <% end %>
  <div class="level-item">
    <%= current_cart.amount.to_money.format(html_wrap: true).html_safe %>
  </div>
</div>
<div class="level-right mt-0 pr-4">
  <%= link_to({ controller: 'trade/my/carts', action: 'show' }, class: 'level-item') do %>
    <span>去购物车</span>
    <i class="fa-solid fa-angle-right"></i>
  <% end %>
</div>
