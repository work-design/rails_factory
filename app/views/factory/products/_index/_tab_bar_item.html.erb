<div data-controller="weui-dialog" data-weui-dialog-id-value="dialog" data-action="click->weui-dialog#toggle" class="<%= active_helper(controllers: 'products', item: 'weui-tabbar__item', active: 'weui-tabbar__item weui-bar__item_on') %>">
  <i class="fa-light fa-filter-list weui-tabbar__icon fa-flash"></i>
  <div class="weui-tabbar__label"><%= t('factory.product_taxons.index.title') %></div>
</div>
<%= link_to({ controller: 'trade/my/carts', action: 'show' }, class: active_helper(controllers: 'carts', item: 'weui-tabbar__item', active: 'weui-tabbar__item weui-bar__item_on')) do %>
  <i class="fa-light fa-cart-shopping weui-tabbar__icon">
    <span class="weui-badge" style="right: 1em"><%= current_cart_count %></span>
  </i>
  <div class="weui-tabbar__label">购物车</div>
<% end %>
<%= link_to({ controller: '/my/home', action: 'index' }, class: 'weui-tabbar__item') do %>
  <i class="fa-light fa-user weui-tabbar__icon"></i>
  <div class="weui-tabbar__label"><%= t('my.home.index.title') %></div>
<% end %>
