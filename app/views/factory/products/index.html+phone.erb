<%= render 'breadcrumb' %>

<div class="weui-flex is-align-items-flex-start">
  <%= render 'menu' %>
  <div class="weui-panel weui-panel_access mt-0 weui-flex__item" data-controller="page" data-page-debug-value="true" data-action="touchmove->page#move:passive">
    <div class="weui-panel__bd">
      <%= render partial: 'product', collection: @products, as: :model %>
      <%= render 'loading' %>
      <% if @products.total_pages == @products.current_page %>
        <%= render 'no_more' %>
      <% elsif @products.blank? %>
        <%= render 'blank' %>
      <% else %>
        <%= render 'tip' %>
      <% end %>
    </div>

    <%= render 'paginator' %>
  </div>
</div>
<%= render 'taxon' %>
