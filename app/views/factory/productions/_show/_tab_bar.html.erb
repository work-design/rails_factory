<div class="level flex-direction-row is-safe-bottom" style="background-color: #f7f7f7">
  <div class="level-left p-3">
    <%= link_to({ controller: 'trade/my/carts', action: 'show', id: @cart.id }, class: 'has-column-centered') do %>
      <i class="fa-solid fa-cart-shopping size-5">
        <span class="weui-badge"><%= @cart.items.count %></span>
      </i>
      <span class="size-7 text-grey"><%= t('trade.my.carts.show.title') %></span>
    <% end if @cart %>
  </div>
  <div class="level-right p-3">
  <% if @cart %>
    <%= render partial: 'cart_new', locals: { model: @production, item_con: 'trade/my/items', item: @cart.init_cart_item(params, good_id: @production.id), cart: @cart } %>
  <% end %>
  </div>
</div>
