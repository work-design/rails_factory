<div class="card">
  <div class="card-image">
    <figure class="image is-1by1">
      <%= image_tag model.product.logo if model.product.logo.attached? %>
    </figure>
  </div>
  <div class="card-content has-text-centered">
    <h2 class="title has-text-danger"><%= model.price.to_money.format.html_safe %></h2>
    <%= link_to model.name, { action: 'show', id: model.id } %>
  </div>
  <div class="card-footer py-2">
  <% if (item = @cart && @cart.find_item(good_id: model.id)) %>
    <%= render partial: 'cart', locals: { model: model, item_con: item_con, item: item } %>
  <% else %>
    <%= render partial: 'add_cart', locals: { model: model, item_con: item_con } %>
  <% end %>
  </div>
</div>
