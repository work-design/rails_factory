<%= render 'breadcrumb' %>

<div class="weui-flex is-align-items-flex-start">
  <%= render 'menu' unless params[:produce_plan_id] %>
  <div class="weui-panel weui-panel_access mt-0 weui-flex__item" data-controller="page" data-page-debug-value="true" data-action="touchmove->page#move:passive">
    <div class="weui-panel__bd">
      <%= render partial: 'production', collection: @productions, as: :model %>
      <%= render 'loading' %>
      <% if @productions.total_pages == @productions.current_page %>
        <%= render 'no_more' %>
      <% elsif @productions.blank? %>
        <%= render 'blank' %>
      <% else %>
        <%= render 'tip' %>
      <% end %>
    </div>

    <%= render 'paginator' %>
  </div>
</div>
<%= render 'taxon' if @produce_plan %>
