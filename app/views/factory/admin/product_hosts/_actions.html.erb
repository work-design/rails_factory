<%= button_to({ action: 'edit', id: model.id }, class: 'cell has-column-centered') do %>
  <i class="fa-solid fa-pencil"></i>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= button_to({ action: 'destroy', id: model.id }, method: :delete, data: { turbo_confirm: t('.destroy.confirm') }, class: 'text-danger', form: { class: 'cell weui-actionsheet__cell_warn' }) do %>
  <i class="fa-solid fa-trash"></i>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= link_to({ controller: 'productions', product_id: model.id }, class: 'cell has-column-centered') do %>
  <i class="fa-regular fa-clone"></i>
  <span><%= model.productions_count %></span>
  <span><%= t('factory.admin.productions.index.title') %></span>
<% end %>
