<%= form_with theme: 'search', url: { action: params[:action] }, data: { switch_target: 'src' }, class: 'display-none' do |f| %>
  <div class="field-body">
    <%= f.text_field :uuid %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:name]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
