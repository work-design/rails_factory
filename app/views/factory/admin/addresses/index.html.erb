<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Address.human_attribute_name(:area_id) %></th>
      <th><%= Address.human_attribute_name(:detail) %></th>
      <th><%= Address.human_attribute_name(:contact) %></th>
      <th><%= Address.human_attribute_name(:tel) %></th>
      <th><%= Address.human_attribute_name(:post_code) %></th>
      <th><%= Address.human_attribute_name(:source) %></th>
      <th>
        <%= link_to new_admin_address_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.area.full_name %></td>
      <td><%= address.detail %></td>
      <td><%= address.contact %></td>
      <td><%= address.tel %></td>
      <td><%= address.post_code %></td>
      <td><%= address.source %></td>
      <td>
        <%= link_to admin_address_path(address), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to admin_custom_trade_items_path(@custom, address_id: address.id), aria: { label: t('factory.admin.trade_items.index.title') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-shopping-cart"></i>
        <% end %>
        <%= link_to edit_admin_address_path(address), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_address_path(address), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @addresses %>
