<tr>
  <td><%= address.area.full_name %></td>
  <td><%= address.detail %></td>
  <td><%= address.contact %></td>
  <td><%= address.tel %></td>
  <td><%= address.post_code %></td>
  <td><%= address.source %></td>
  <td>
    <%= link_to admin_address_path(address), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fa-light fa-eye"></i>
    <% end %>
    <%= link_to admin_custom_trade_items_path(@custom, address_id: address.id), aria: { label: t('factory.admin.trade_items.index.title') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fa-light fa-shopping-cart"></i>
    <% end %>
    <%= link_to edit_admin_address_path(address), aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fa-light fa-pencil-alt"></i>
    <% end %>
    <%= link_to admin_address_path(address), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fa-light fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
