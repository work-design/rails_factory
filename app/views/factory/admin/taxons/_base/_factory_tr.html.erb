<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ action: 'new', factory_taxon_id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.new.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-plus text-primary"></i>
      <% end %>
    </div>
  </td>
</tr>
