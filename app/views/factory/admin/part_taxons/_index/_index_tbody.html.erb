<td>
  <span style="width: <%= model.depth * 1.43 %>em; display: inline-block"></span>
  <% if !model.leaf? %>
    <i class="fa-solid fa-caret-down fa-fw" data-action="click->tree#collapse" style="cursor: pointer"></i>
  <% else %>
    <i class="fa-solid fa-minus fa-fw"></i>
  <% end %>
  <span><%= model.name %></span>
</td>
<td>
  <% if model.factory_taxon %>
    <%= link_to model.factory_taxon.name, { controller: 'factory_taxons', action: 'show', id: model.factory_taxon_id } %>
    <%= link_to({ action: 'import', id: model.id }, aria: { label: t('factory.admin.part_taxons.import.title') }) do %>
      <i class="fa-light fa-sign-in-alt"></i>
    <% end %>
  <% end %>
</td>
