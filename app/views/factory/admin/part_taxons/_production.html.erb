<tr id="tr_<%= @part_taxon.id %>_<%= production.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <td>
    <span style="width: 1em; display: inline-block"></span>
    <%= image_tag production.product.logo.variant(resize_to_limit: [24, 24]), class: 'image is-24x24' if production.product.logo.attached? %>
    <%= production.name %>
  </td>
  <td><%= production.product.qr_prefix %></td>
  <td>
    <table class="table is-borderless">
      <% production.parts.each do |part| %>
        <tr>
          <td><span class="tag"><%= link_to part.name, { controller: 'parts', action: 'show', id: part.id } %></span></td>
          <td><%= part.price %></td>
        </tr>
      <% end %>
    </table>
  </td>
  <td>
    <% part_provider = production.part_providers.default_where(default_params).take %>
    <% if part_provider %>
      <i class="fas fa-check has-text-success"></i>
      <%= button_to({ controller: 'parts', action: 'destroy', id: part_provider.part_id }, method: :patch, aria: { label: t('.provide') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-tractor"></i>
      <% end %>
    <% else %>
      <%= button_to({ controller: 'productions', action: 'provide', product_id: production.product_id, id: production.id, part_taxon_id: @part_taxon.id }, method: :patch, aria: { label: t('.provide') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-tractor"></i>
      <% end %>
    <% end %>
  </td>
  <td></td>
  <td>
    <%= link_to({ controller: 'productions', action: 'show', product_id: production.product_id, id: production.id }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-info"></i>
    <% end %>
  </td>
</tr>
