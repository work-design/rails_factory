<td>
  <%= link_to({ action: 'productions', product_id: model.id }, data: { turbo_frame: 'visit' }) do %>
    <i class="fas fa-fw fa-caret-right" style="cursor: pointer" data-action="click->tree_remote#expand"></i>
  <% end %>
  <%= image_tag model.logo.variant(resize_to_limit: [24, 24]), class: 'image is-24x24' if model.logo.attached? %>
  <%= model.name %>
</td>
<td><%= model.qr_prefix %></td>
<td>
  <table class="table is-borderless">
    <% model.parts.each do |part| %>
      <tr>
        <td><span class="tag"><%= link_to part.name, { controller: 'parts', action: 'show', id: part.id } %></span></td>
        <td><%= part.price %></td>
      </tr>
    <% end %>
  </table>
</td>
<td>
  <% if @select_ids.include?(model.id) %>
    <i class="fas fa-check has-text-success"></i>
  <% else %>
    <i class="fas fa-times has-text-gery"></i>
  <% end %>
</td>
<td>
  <%= link_to({ controller: 'products', action: 'part', id: model.id }, aria: { label: t('factory.admin.products.part.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fas fa-cube"></i>
  <% end %>
</td>
