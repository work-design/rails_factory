<tr data-controller="tree_remote show" data-action="mouseenter->show#show mouseleave->show#hide" id="tr_<%= model.id %>">
  <%= yield %>
  <td>
    <turbo-frame>
      <%= link_to t('factory.admin.product_plans.index.title'), { controller: 'product_plans', product_id: model.id }, data: { turbo_frame: '_top' }, class: 'button is-small is-success' %>
      <%= link_to({ controller: 'productions', product_id: model.id }, aria: { label: t('factory.admin.productions.index.title') }, data: { turbo_frame: '_top' }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-clone"></i>
      <% end %>
      <%= link_to({ controller: 'products', action: 'show', id: model.id }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-info"></i>
      <% end %>
      <%= link_to({ controller: 'products',action: 'edit', id: model.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
    </turbo-frame>
  </td>
</tr>

<% if params[:product_id] == model.id.to_s %>
  <%= render partial: 'production', collection: model.productions, as: :model %>
<% end %>
