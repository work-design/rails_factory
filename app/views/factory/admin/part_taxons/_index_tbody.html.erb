<tr data-depth="<%= model.depth_str %>">
  <td>
    <span style="width: <%= model.depth * 1.43 %>em; display: inline-block"></span>
    <% if !model.leaf? %>
      <i class="fas fa-caret-down fa-fw" data-action="click->tree#collapse" style="cursor: pointer"></i>
    <% else %>
      <i class="fas fa-minus fa-fw"></i>
    <% end %>
    <span><%= model.name %></span>
  </td>
  <td>
    <% if model.factory_taxon %>
      <%= link_to model.factory_taxon.name, { controller: 'factory_taxons', action: 'show', id: model.factory_taxon_id } %>
      <%= link_to '进货', { action: 'import', id: model.id } %>
  <% end %>
  </td>
  <td>
    <%= link_to({ action: 'edit', id: model.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
