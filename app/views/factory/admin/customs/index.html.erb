<% content_for :breadcrumb do %>
  <div class="ui basic segment breadcrumb">
    <%= link_to t('factory.admin.products.index.title'), admin_products_path, class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <%= link_to t('factory.admin.product_plans.index.title'), admin_product_plans_path(@product), class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <div class="active section"><%= t('.title') %></div>
  </div>
<% end %>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Custom.human_attribute_name(:product_name) %></th>
      <th><%= Custom.human_attribute_name(:state) %></th>
      <th><%= Custom.human_attribute_name(:qr_code) %></th>
      <th><%= Custom.human_attribute_name(:parts) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @customs.each do |custom| %>
    <tr>
      <td><%= custom.product.name %></td>
      <td><%= custom.state %></td>
      <td><%= custom.qr_code %></td>
      <td class="ui labels">
        <table class="ui very basic compact table">
          <% custom.parts.each do |part| %>
            <tr>
              <td><span class="ui label"><%= link_to part.name, admin_part_path(part), target: '_blank' %></span></td>
              <td><%= part.price %></td>
            </tr>
          <% end %>
        </table>
      </td>
      <td>
        <%= link_to admin_custom_path(custom), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to admin_custom_trade_items_path(custom), aria: { label: t('factory.admin.trade_items.index.title') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-shopping-cart"></i>
        <% end %>
        <%= link_to admin_custom_addresses_path(custom), aria: { label: t('factory.admin.addresses.index.title') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-map-marker-alt"></i>
        <% end %>
        <%= link_to edit_admin_custom_path(custom), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_custom_path(custom), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @customs %>
