<tr id="provide_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="has-inline-centered visibility-hidden">
      <%= button_to({ action: 'show', id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info text-info"></i>
        <span class="ml-1"><%= t('.show.title') %></span>
      <% end %>
      <%= button_to({ controller: 'taxon_provides', provide_id: model.id, action: 'create' }, params: { taxon_provide: { taxon_id: @taxon.id } }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cart-flatbed text-success"></i>
        <span class="ml-1"><%= t('.taxon_provides.create.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
