<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide" class="left-border">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ action: 'new', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil text-info"></i>
        <span class="ml-1"><%= t('.production_provides.new.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
