<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ action: 'show', id: model.id, product_id: model.product_id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info text-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id, product_id: model.product_id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil text-info"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'production_plans', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-list text-info"></i>
        <span class="ml-1"><%= t('.production_plans.index.title') %></span>
      <% end %>
      <%= link_to({ controller: 'production_items', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-list text-success"></i>
        <span class="ml-1"><%= t('.production_items.index.title') %></span>
      <% end %>
    </div>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'trade_items', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-shopping-cart text-info"></i>
        <span class="ml-1"><%= t('.trade_items.index.title') %></span>
      <% end %>
      <%= link_to({ controller: 'addresses', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-map-marker-alt text-warning"></i>
        <span class="ml-1"><%= t('.addresses.index.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
