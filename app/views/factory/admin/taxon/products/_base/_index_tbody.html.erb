<td>
  <div class="is-several">
    <%= image_tag model.logo.url, class: 'image is-32x32' if model.logo.attached? %>
    <%= link_to({ controller: 'productions', product_id: model.id }, text: true) do %>
      <span><%= model.name %></span>
    <% end %>
  </div>
</td>
<td>
<% model.productions.each do |production| %>
  <p>
    <span><%= production.name %></span>
    <% if production.enabled %>
      <span class="tag is-success"><%= production.enabled_i18n %></span>
    <% end %>
  </p>
<% end %>
</td>
<td>
<% model.productions.each do |production| %>
  <p><%= production.stock %></p>
<% end %>
</td>
<td>
<% model.productions.each do |production| %>
  <p><%= production.price.to_money.format.html_safe %></p>
<% end %>
</td>
<td>
  <% model.product_parts.each do |product_part| %>
    <p>
      <span><%= product_part.name %></span>
      <span class="color-grey size-7"><%= product_part.select_str %></span>
    </p>
  <% end %>
  <p data-show-target="item" class="visibility-hidden">
    <%= link_to({ controller: 'product_parts', product_id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-tree"></i>
      <span class="pl-1"><%= t('.product_parts.index.title') %></span>
    <% end %>
  </p>
</td>
<td>
  <%= link_to({ controller: 'fits', product_id: model.id }, class: 'button is-small is-rounded is-light') do %>
    <span class="pl-1"><%= model.fits_count %></span>
  <% end %>
</td>
