<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>名称</th>
      <th></th>
      <th>
        <%= link_to new_admin_provider_path, class: 'ui teal button' do %>
          <i class="fa-light fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @providers.each do |provider| %>
    <tr>
      <td><%= provider.name %></td>
      <td><%= link_to '编辑', edit_admin_provider_path(provider) %></td>
      <td>
        <%= link_to admin_provider_path(provider), method: :delete, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fa-light fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
