<div class="is-several">
  <%= image_tag model.logo, class: 'image is-24x24' if model.logo.attached? %>
  <span><%= model.title %></span>
</div>
<p>
  <span><%= model.book_start_days %></span>
  <time><%= model.book_start_at.to_fs(:time) %></time>
</p>
<p>
  <span><%= model.book_finish_days %></span>
  <time><%= model.book_finish_at.to_fs(:time) %></time>
</p>
<p>
  <time><%= model.deliver_start_at.to_fs(:time) %></time>
  <span class="has-text-grey">~</span>
  <time><%= model.deliver_finish_at.to_fs(:time) %></time>
</p>
