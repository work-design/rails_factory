<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ controller: 'production_provides', action: 'create' }, params: { production_provide: { provide_id: model.id } }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cart-flatbed text-success"></i>
        <span class="ml-1"><%= t('.production_provides.create.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
