<h2 class="title has-text-centered">
  <%= @product_taxon.name %>
</h2>

<div class="tabs">
  <ul>
    <li class="<%= active_helper(product_taxons: ['show', 'edit'], active: 'is-active') %>">
      <%= link_to t('.product_taxons.show.title'), { controller: 'product_taxons', action: 'show', id: @product_taxon.id } %>
    </li>
    <li class="<%= active_helper(product_taxons: ['import'], active: 'is-active') %>">
      <%= link_to t('.product_taxons.import.title'), { controller: 'product_taxons', action: 'import', id: @product_taxon.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'products', active: 'is-active') %>">
      <%= link_to t('.products.index.title'), { controller: 'products', product_taxon_id: @product_taxon.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'products', active: 'is-active') %>">
      <%= link_to({ controller: 'products', action: 'buy', product_taxon_id: @product_taxon.id }) do %>
        <i class="fa-solid fa-store"></i>
        <span class="pl-1"><%= t('.products.buy.title') %></span>
      <% end %>
    </li>
    <li class="<%= active_helper(controllers: 'productions', active: 'is-active') %>">
      <%= link_to t('.productions.taxon.title'), { controller: 'productions', action: 'taxon', product_taxon_id: @product_taxon.id } %>
    </li>
    <li class="<%= active_helper(controllers: 'provides', active: 'is-active') %>">
      <%= link_to t('.provides.index.title'), { controller: 'provides', product_taxon_id: @product_taxon.id } %>
    </li>
  </ul>
</div>
