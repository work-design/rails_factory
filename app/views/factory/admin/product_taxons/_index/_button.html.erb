<div class="buttons are-small mb-0">
  <%= link_to({ action: 'all', **request.query_parameters.except(:id) }, class: 'button is-link mb-0') do %>
    <i class="fa-solid fa-plus"></i>
    <span class="pl-1"><%= t('.all.title') %></span>
  <% end %>
  <%= button_to({ action: 'new', **request.query_parameters.except(:id) }, class: 'button is-info') do %>
    <i class="fa-solid fa-plus"></i>
    <span class="pl-1"><%= t('.new.title') %></span>
  <% end %>
</div>
