<div class="ui top attached borderless menu">
  <%= link_to 'Products', admin_products_path, class: 'item' %>
  <div class="header item">Admin Product Taxons</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Admin Product Taxon', new_admin_product_taxon_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= ProductTaxon.human_attribute_name(:id) %></th>
      <th><%= ProductTaxon.human_attribute_name(:name) %></th>
      <th><%= ProductTaxon.human_attribute_name(:position) %></th>
      <th><%= ProductTaxon.human_attribute_name(:profit_margin) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @product_taxons.each do |product_taxon| %>
    <tr>
      <td><%= product_taxon.id %></td>
      <td><%= product_taxon.name %></td>
      <td><%= product_taxon.position %></td>
      <td><%= product_taxon.profit_margin %></td>
      <td class="ui labels">
        <%= link_to admin_product_taxon_path(product_taxon), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_product_taxon_path(product_taxon), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_product_taxon_path(product_taxon), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @product_taxons %>
