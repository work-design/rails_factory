<%= render 'index_bar' %>

<%= render layout: 'index_table' do %>
  <% @product_taxons.group_by(&:factory_taxon).each do |taxon, product_taxons| %>
    <%= render partial: 'taxon_tbody', locals: { taxon: taxon, size: product_taxons.size + 1 } %>
    <%= render partial: 'index_tbody', layout: 'index_tr', collection: product_taxons, as: :model %>
  <% end %>
<% end %>
