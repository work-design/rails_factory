<% @productions.each do |production| %>
<tr data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <td>
    <span style="width: 1em; display: inline-block"></span>
    <%= image_tag production.product.logo.variant(resize_to_limit: [24, 24]), class: 'image is-24x24' if production.product.logo.attached? %>
    <%= production.product.name %>
  </td>
  <td><%= production.product.qr_prefix %></td>
  <td>
    <table class="table is-borderless">
      <% production.parts.each do |part| %>
        <tr>
          <td><span class="tag"><%= link_to part.name, { controller: 'parts', action: 'show', id: part.id }, remote: true %></span></td>
          <td><%= part.price %></td>
        </tr>
      <% end %>
    </table>
  </td>
  <td colspan="2"></td>
  <td>
    <%= link_to({ controller: 'productions', action: 'show', product_id: production.product_id, id: production.id }, aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-info"></i>
    <% end %>
  </td>
</tr>
<% end %>
