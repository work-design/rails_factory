<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>
        <%= Product.human_attribute_name(:product_taxon_id) %>
        <%= link_to admin_product_taxons_path, aria: { label: '分类设置' }, target: '_blank' do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </th>
      <th><%= Product.human_attribute_name(:name) %></th>
      <th><%= Product.human_attribute_name(:logo) %></th>
      <th><%= Product.human_attribute_name(:main_image) %></th>
      <th><%= Product.human_attribute_name(:qr_prefix) %></th>
      <th><%= Product.human_attribute_name(:reference_price) %></th>
      <th><%= Product.human_attribute_name(:parts) %></th>
      <th></th>
      <th>
        <%= link_to new_admin_product_path, remote: true, class: 'ui teal button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.product_taxon&.name %></td>
      <td><%= product.name %></td>
      <td><%= image_tag product.logo.variant(resize_to_limit: [80, 80]), class: 'ui tiny image' if product.logo.attached? %></td>
      <td><%= image_tag product.main_image.variant(resize_to_limit: [80, 80]), class: 'ui tiny image' if product.main_image.attached? %></td>
      <td><%= product.qr_prefix %></td>
      <td><%= product.price %></td>
      <td class="ui labels">
        <table class="ui very basic compact table">
          <% product.parts.each do |part| %>
            <tr>
              <td><span class="ui label"><%= link_to part.name, admin_part_path(part), remote: true %></span></td>
              <td><%= part.price %></td>
            </tr>
          <% end %>
        </table>
      </td>
      <td>
        <%= link_to t('factory.admin.product_plans.index.title'), admin_product_plans_path(product), class: 'ui blue label' %>
      </td>
      <td>
        <%= link_to admin_product_path(product), remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to admin_customs_path(product_id: product.id), class: 'ui mini circular icon button' do %>
          <i class="fas fa-cube"></i>
        <% end %>
        <%= link_to edit_admin_product_path(product), remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_product_path(product), method: :delete, data: { confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @products %>
