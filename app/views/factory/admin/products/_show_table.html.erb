<tr>
  <td class="has-text-right"><%= Factory::Product.human_attribute_name(:name) %></td>
  <td><%= @product.name %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Factory::Product.human_attribute_name(:qr_prefix) %></td>
  <td><%= @product.qr_prefix %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Factory::Product.human_attribute_name(:description) %></td>
  <td><%= simple_format @product.description %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Factory::Product.human_attribute_name(:covers) %></td>
  <td>
    <div class="is-flex">
      <%= render 'com/attachments/list', target: @product.covers %>
    </div>
  </td>
</tr>
<tr>
  <td class="has-text-right"><%= Factory::Product.human_attribute_name(:images) %></td>
  <td>
    <div class="is-flex">
    <% @product.images.each do |image| %>
      <%= image_tag image, class: 'image is-128x128 mr-4' %>
    <% end %>
    </div>
  </td>
</tr>
