<tr>
  <td><%= Factory::Product.human_attribute_name(:name) %></td>
  <td><%= @product.name %></td>
</tr>
<tr>
  <td><%= Factory::Product.human_attribute_name(:logo) %></td>
  <td><%= image_tag @product.logo, class: 'image is-64x64' if @product.logo.attached? %></td>
</tr>
<tr>
  <td><%= Factory::Product.human_attribute_name(:qr_prefix) %></td>
  <td><%= @product.qr_prefix %></td>
</tr>
<tr>
  <td><%= Factory::Product.human_attribute_name(:description) %></td>
  <td><%= simple_format @product.description %></td>
</tr>
<tr>
  <td><%= Factory::Product.human_attribute_name(:covers) %></td>
  <td>
    <div class="flex">
      <%= render 'com/attachments/list', target: @product.covers %>
    </div>
  </td>
</tr>
<tr>
  <td><%= Factory::Product.human_attribute_name(:images) %></td>
  <td>
    <div class="flex">
    <% @product.images.each do |image| %>
      <%= image_tag image, class: 'image is-128x128 mr-4' %>
    <% end %>
    </div>
  </td>
</tr>
