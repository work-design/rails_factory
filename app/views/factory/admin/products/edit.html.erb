<% if turbo_frame_request_id == 'modal' %>
  <%= turbo_frame_tagged 'modal', data: { title: t('.title') } do %>
    <%= render partial: 'edit_form', locals: { model: model } %>
  <% end %>
<% else %>
  <%= render partial: 'product_bar', locals: { product: @product } %>
  <%= render partial: 'edit_form' %>
<% end %>
