<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide" data-id="<%= model.id %>">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'fits', product_id: model.id, product_taxon_id: model.product_taxon_id }, aria: { label: t('factory.admin.fits.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-gears"></i>
        <span class="pl-1"><%= model.fits_count %></span>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id, product_taxon_id: model.product_taxon_id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
    </div>
  </td>
</tr>
