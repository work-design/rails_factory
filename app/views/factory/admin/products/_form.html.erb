<%= f.collection_select :brand_id, @brands, :id, :name, include_blank: true if @brands.present? %>
<%= f.text_field :name, required: true, autofocus: true %>
<%= f.file_field :logo %>
<%= f.text_area :description %>
<%= f.number_field :base_price %>
<%= f.number_field :profit_margin, step: 0.01 %>
<%= f.fields :productions, all: { normal: nil, checkbox: nil }, wrap: { input: 'field > control', checkbox: 'field flex-shrink-0 has-block-centered > control > label.checkbox' }, before_wrap: { checkbox: nil }, label: nil, placeholder: true do |ef| %>
  <%= render partial: 'item_form', locals: { ef: ef } %>
<% end %>
