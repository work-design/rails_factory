<%= f.collection_select :brand_id, @brands, :id, :name, include_blank: true if @brands.present? %>
<%= f.text_field :name, required: true %>
<%= f.file_field :logo %>
<%= f.text_area :description %>
<%= f.number_field :base_price %>
<%= f.number_field :profit_margin, step: 0.01 %>
<%= f.fields :productions do |ef| %>
  <%= ef.text_field :name %>
  <%= ef.number_field :cost_price %>
  <%= ef.number_field :profit_price %>
<% end %>
