<%= render partial: 'com/nodes/outer_select', locals: { f: f, outer: 'product_taxon', node: f.object.product_taxon } %>
<%= f.text_field :name, required: true %>
<%= f.collection_select :brand_id, @brands, :id, :name, include_blank: true %>
<%= f.file_field :logo %>
<%= render 'com/attachments/list_field', target: f.object.covers, f: f %>
<%= render 'com/attachments/list_field', target: f.object.images, f: f %>
<%= f.text_area :description %>
<%= f.fields :product_hosts do |ef| %>
  <%= ef.number_field :profit_margin, step: 0.01 %>
  <%= ef.hidden_field :organ_id, value: current_organ.id %>
<% end %>
