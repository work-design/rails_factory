<strong class="weui-media-box__title"><%= link_to model.name, { action: 'show', id: model.id }, text: true %></strong>
<p class="weui-media-box__desc"><%= image_tag model.logo.variant(resize_to_limit: [80, 80]), class: 'image is-64x64' if model.logo.attached? %></p>
<p class="weui-media-box__desc"><%= model.qr_prefix %></p>
<p class="weui-media-box__desc"><%= model.profit_margin_str %></p>
<div class="weui-media-box__desc">
  <p><%= model.min_price.to_money.format(html_wrap: true).html_safe %></p>
  <p><%= model.max_price.to_money.format(html_wrap: true).html_safe %></p>
</div>
