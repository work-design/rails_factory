<td><i class="fa-solid fa-fw fa-bars text-grey is-drawable"></i></td>
<td>
  <%= link_to({ controller: 'productions', product_id: model.id }, text: true, class: 'is-several') do %>
    <%= image_tag model.logo.variant(resize_to_limit: [32, 32]), class: 'image is-32x32' if model.logo.attached? %>
    <span><%= model.name %></span>
  <% end %>
</td>
<td><%= model.description.to_s.truncate(27) %></td>
<td>
  <p><%= model.brand&.name %></p>
</td>
<td>
  <%= model.covers_attachments.size %>
</td>
<td>
  <% model.taxon_components.each do |taxon_component| %>
    <p>
      <span><%= taxon_component.name %></span>
      <span class="text-grey size-7"><%= taxon_component.select_str %></span>
    </p>
  <% end %>
  <p>
    <%= link_to({ controller: 'taxon_components', product_id: model.id }, aria: { label: t('factory.admin.taxon_components.index.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-tree"></i>
    <% end %>
  </p>
</td>
<td>
  <%= link_to({ controller: 'productions', product_id: model.id }, text: true) do %>
    <span><%= model.productions_count %></span>
  <% end %>
</td>
