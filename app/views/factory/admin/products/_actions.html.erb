<%= link_to({ action: 'edit', id: model.id }, class: 'weui-actionsheet__cell') do %>
  <i class="fa-solid fa-pencil"></i>
  <span><%= t('.edit') %></span>
<% end %>
<%= button_to({ action: 'destroy', id: model.id }, method: :delete, data: { turbo_confirm: t('.confirm') }, class: 'has-text-danger', form: { class: 'weui-actionsheet__cell weui-actionsheet__cell_warn' }) do %>
  <i class="fa-solid fa-trash"></i>
  <span><%= t('.destroy') %></span>
<% end %>
<%= link_to({ controller: 'productions', product_id: model.id }, class: 'weui-actionsheet__cell') do %>
  <i class="fa-regular fa-clone"></i>
  <span><%= model.productions_count %></span>
  <span><%= t('factory.admin.productions.index.title') %></span>
<% end %>
<%= button_to({ action: 'move_higher', id: model.id }, method: :patch, form: { class: 'weui-actionsheet__cell' }) do %>
  <i class="fa-solid fa-arrow-up"></i>
  <span>上移一位</span>
<% end %>
<%= button_to({ action: 'move_lower', id: model.id }, method: :patch, form: { class: 'weui-actionsheet__cell' }) do %>
  <i class="fa-solid fa-arrow-down"></i>
  <span>下移一位</span>
<% end %>
