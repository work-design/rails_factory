<div class="weui-actionsheet__cell">
  <%= link_to(action: 'edit', id: model.id) do %>
    <i class="fa-light fa-pencil"></i><span><%= t('.edit') %></span>
  <% end %>
</div>
<div class="weui-actionsheet__cell weui-actionsheet__cell_warn">
  <%= button_to({ action: 'destroy', id: model.id }, method: :delete, data: { confirm: t('.confirm') }, class: 'has-text-danger') do %>
    <i class="fa-light fa-trash"></i><span><%= t('.destroy') %></span>
  <% end %>
</div>
<div class="weui-actionsheet__cell">
  <%= link_to({ controller: 'productions', product_id: model.id }) do %>
    <i class="fa-light fa-clone"></i>
    <span><%= model.productions_count %></span>
    <span><%= t('factory.admin.productions.index.title') %></span>
  <% end %>
</div>
