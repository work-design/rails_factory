<td>
  <%= image_tag model.logo, class: 'image is-24x24' if model.logo.attached? %>
  <%= model.name %>
</td>
<td>
  <table class="table is-fullwidth is-borderless">
    <% model.parts.each do |part| %>
      <tr>
        <td><span class="tag"><%= link_to part.name, admin_part_path(part) %></span></td>
        <td><%= part.price %></td>
      </tr>
    <% end %>
  </table>
</td>
<td><%= model.state %></td>
<td><%= model.qr_code %></td>
<td class="has-text-right">
  <p><%= model.cost_price.to_s(:currency, unit: '￥') %></p>
  <p><%= model.profit_price.to_s(:currency, unit: '￥') %></p>
  <p><%= model.price.to_s(:currency, unit: '￥') %></p>
</td>
<td>
  <%= link_to({ action: 'price', id: model.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fas fa-dollar-sign"></i>
  <% end %>
</td>
<td>
  <%= link_to({ action: 'part', id: model.id }, aria: { label: t('factory.admin.products.part.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fas fa-cube"></i>
  <% end %>
</td>
<td>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :default, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
