<%= form_with theme: 'modal', model: @production, url: { action: 'update' } do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= render 'error_messages', target: f.object %>
    <%= f.number_field :profit_price, step: 0.01, autofocus: true %>
  </section>
  <%= f.submit %>
<% end %>
