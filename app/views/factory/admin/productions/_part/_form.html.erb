<%= form_with theme: 'modal', model: @production, url: { action: 'update' } do |f| %>
  <header class="modal-card-head">
    <p class="modal-card-title"><%= t('.title') %></p>
    <button type="button" data-action="modal#close" class="delete"></button>
  </header>
  <section class="modal-card-body">
    <%= render 'error_messages', target: f.object %>
    <% @product.taxon_components.each do |taxon_component| %>
      <%= f.collection_check_boxes :part_ids, taxon_component.parts, :id, :name, { label: taxon_component.name, wrap: { label: 'field-label', select: 'field-body control' } }, { multiple: true } %>
    <% end %>
  </section>
  <footer class="modal-card-foot">
    <%= f.submit %>
  </footer>
<% end %>
