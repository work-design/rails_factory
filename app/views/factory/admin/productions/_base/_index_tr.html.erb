<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info text-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <i class="fa-solid fa-trash text-danger"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'production_spaces', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil text-info"></i>
        <span class="ml-1"><%= t('.production_spaces.index.title') %></span>
      <% end %>
      <%= button_to({ action: 'wallet', id: model.id }, class: 'button is-small is-light') do %>
        <i class="fa-solid fa-pencil text-link"></i>
        <span class="ml-1"><%= t('.wallet.title') %></span>
      <% end %>
      <%= button_to({ action: 'edit_stock', id: model.id }, class: 'button is-small is-light') do %>
        <i class="fa-solid fa-pencil text-primary"></i>
        <span class="ml-1"><%= t('.edit_stock.title') %></span>
      <% end %>
    </div>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'production/provides', production_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-building text-info"></i>
        <span class="ml-1"><%= t('.production_provides.index.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
