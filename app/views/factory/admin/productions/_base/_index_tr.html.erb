<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <div>
        <%= link_to({ controller: 'production_plans', production_id: model.id }, aria: { label: t('factory.admin.production_plans.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-list has-text-info"></i>
        <% end %>
        <%= link_to({ controller: 'purchase_items', production_id: model.id }, aria: { label: t('factory.admin.purchase_items.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-list has-text-info"></i>
        <% end %>
        <%= link_to({ controller: 'production_items', production_id: model.id }, aria: { label: t('factory.admin.production_items.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-list has-text-success"></i>
        <% end %>
        <%= link_to({ controller: 'trade/admin/rent_charges', rentable_type: model.class_name, rentable_id: model.id }, state: 'enter', aria: { label: t('trade.admin.rent_charges.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-clock-rotate-left has-text-danger"></i>
          <span class="pl-1"><%= model.rent_charges_count %></span>
        <% end %>
        <%= link_to({ controller: 'trade_items', production_id: model.id }, aria: { label: t('factory.admin.trade_items.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-shopping-cart has-text-info"></i>
        <% end %>
        <%= link_to({ controller: 'addresses', production_id: model.id }, aria: { label: t('factory.admin.addresses.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-map-marker-alt has-text-warning"></i>
        <% end %>
      </div>
      <div class="mt-2">
        <%= link_to({ controller: 'stock_logs', production_id: model.id }, aria: { label: t('factory.admin.stock_logs.index.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-clock-rotate-left has-text-info"></i>
        <% end %>
        <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-circle-info has-text-info"></i>
        <% end %>
        <%= button_to({ action: 'edit', id: model.id }, data: { turbo_scroll: true }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
          <i class="fa-solid fa-pencil has-text-info"></i>
        <% end %>
        <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.confirm'), turbo_scroll: true } }) do %>
          <i class="fa-solid fa-trash has-text-danger"></i>
        <% end %>
      </div>
    </div>
  </td>
</tr>
