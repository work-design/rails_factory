<%= link_to({ action: 'show', id: model.id }) do %>
  <span><%= model.title %></span>
  <span class="tag"><%= model.state_i18n %></span>
<% end %>
<div class="mt-1 flex">
<% if model.default %>
  <div class="tags has-addons mb-0 mr-2">
    <span class="tag mb-1"><%= Factory::Production.human_attribute_name(:default) %></span>
    <span class="tag is-primary mb-1"><i class="fa-solid fa-check"></i></span>
  </div>
<% end %>
<% if model.enabled %>
  <div class="tags has-addons">
    <span class="tag mb-1"><%= Factory::Production.human_attribute_name(:enabled) %></span>
    <span class="tag is-primary mb-1"><i class="fa-solid fa-check"></i></span>
  </div>
<% end %>
</div>
<p class="text-danger"><%= model.price.to_money.format.html_safe %></p>
