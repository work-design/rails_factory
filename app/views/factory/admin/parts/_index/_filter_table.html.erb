<table class="table as-search">
  <tr>
    <th><%= link_to Factory::Part.human_attribute_name(:part_taxon_id), { controller: 'part_taxons' }, text: true %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:part_taxon_id]), class: active_params(part_taxon_id: '', active: 'button is-info', item: 'button is-light') %>
      <% @part_taxons.each do |part_taxon| %>
        <%= link_to part_taxon.name, filter_params(part_taxon_id: part_taxon.id, except: [:id]), class: active_params(part_taxon_id: part_taxon.id, active: 'button is-info', item: 'button is-light') %>
      <% end %>
      <%= link_to({ controller: 'part_taxons', action: 'new' }, data: { turbo_frame: 'modal' }, class: 'button is-light') do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </td>
  </tr>
</table>
