<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide" class="background-success-light">
  <%= yield %>
  <td>
    <div data-show-target="item" class="has-inline-centered visibility-hidden">
      <%= button_to({ controller: 'product_provides', action: 'show', taxon_id: model.product.taxon_id, id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info text-info"></i>
      <% end %>
      <%= button_to({ controller: 'product_provides', action: 'edit', taxon_id: model.product.taxon_id, id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil text-link"></i>
      <% end %>
      <%= button_to({ controller: 'product_provides', action: 'destroy', taxon_id: model.product.taxon_id, id: model.id }, method: :delete, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <i class="fa-solid fa-trash text-danger"></i>
        <span class="ml-1"><%= t('.destroy.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
