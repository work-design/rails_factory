<table class="table as-search">
  <tr>
    <th><%= Trade::Item.human_attribute_name(:status) %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:status]), class: active_helper(status: nil, active: 'button is-info', item: 'button is-light') %>
      <% Trade::Item.options_i18n(:status).each do |text, status| %>
        <%= link_to text, filter_params(status: status), class: active_helper(status: status, active: 'button is-info', item: 'button is-light') %>
      <% end %>
    </td>
  </tr>
</table>
