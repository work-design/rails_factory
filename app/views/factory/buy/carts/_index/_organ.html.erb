<div class="card">
  <div class="card-image">
    <%= image_tag organ.logo.variant(resize_to_limit: [150, 150]), class: 'image' if organ.logo.attached? %>
  </div>
  <div class="card-content">
    <div>
      <span class="has-grey-text"><%= organ.name %></span>
    </div>
    <p><%= organ.address %></p>
    <p>
      <%= link_to organ.name, { action: 'list' }, class: 'button is-link' %>
    </p>
  </div>
</div>
