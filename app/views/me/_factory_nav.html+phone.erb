<div class="weui-panel" data-controller="empty">
  <div class="weui-panel__hd">
    <i class="fa-solid fa-fw fa-store"></i>
    <span><%= t('factory.admin.title') %></span>
  </div>
  <div class="weui-panel__bd">
    <div class="columns is-4-mobile is-flex is-vcentered is-centered m-0 is-shadow" data-empty-target="content">
      <%= link_to({ controller: 'factory/admin/product_taxons' }, class: 'column has-block-centered') do %>
        <div class="has-text-grey-dark">
          <i class="fa-solid fa-fw fa-xl fa-folder-tree"></i>
        </div>
        <div class="has-text-dark"><%= t('factory.admin.product_taxons.index.title') %></div>
      <% end %>
      <%= link_to({ controller: 'factory/admin/scenes' }, class: 'column has-block-centered') do %>
        <div class="has-text-grey-dark">
          <i class="fa-solid fa-fw fa-xl fa-lightbulb"></i>
        </div>
        <div class="has-text-dark"><%= t('factory.admin.scenes.index.title') %></div>
      <% end %>
    </div>
  </div>
</div>
