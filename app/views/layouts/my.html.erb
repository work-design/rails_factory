<!DOCTYPE html>
<html>

<head>
  <title><%= content_for?(:title) ? yield(:title) : t('site_name') %></title>
  <meta name="description" content="<%= yield(:meta_description) %>">
  <meta name="keywords" content="<%= yield(:meta_keywords) %>">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': true %>
  <%= css_load media: 'all', 'data-turbolinks-track': true %>
  <%= stylesheet_link_tag 'the_notify/cable' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
  <%= javascript_include_tag 'the_notify/cable', 'data-turbolinks-eval': 'false' %>
  <%= js_ready 'data-turbolinks-track': true %>
  <%= csrf_meta_tags %>
  <%= action_cable_meta_tag %>
</head>

<body>
  <%= render 'layouts/navbar' %>
  <%= render 'shared/alert' %>

  <main class="ui container grid">
    <div class="three wide column">
      <% if content_for?(:nav) %>
        <%= yield :nav %>
      <% else %>
        <%= render 'my/base/nav' %>
      <% end %>
    </div>
    <div class="thirteen wide column">
      <%= yield %>
    </div>
  </main>

  <%# render 'layouts/footer' %>

  <%= js_load %>
  <%= javascript_include_tag 'footer' %>
</body>

</html>