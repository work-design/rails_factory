<!DOCTYPE html>
<html>
  <head>
    <title>管理后台</title>
    <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'the_notify/cable' %>
    <%= css_load media: 'all' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'the_notify/cable', 'data-turbolinks-eval': 'false' %>
    <%= js_ready 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
  </head>
  <body>

    <%= render 'admin/base/nav_bar' %>
    <%= render 'shared/alert' %>

    <main class="ui invisible side">
      <div class="sidebar">
        <%= render 'nav' %>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </main>

    <%= js_load %>
    <%= javascript_include_tag 'footer' %>
  </body>
</html>

