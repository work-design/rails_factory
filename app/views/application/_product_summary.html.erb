<table id="product_summary_<%= production.product_id %>" class="table is-embed is-interval is-fullwidth align-self-flex-start text-grey">
<% cart.find_items(production.brother_ids, good_type: production.base_class_name, **options).each do |item| %>
  <tr data-id="<%= item.id %>" style="background-color: <%= item.good_id == production.id ? '#eee' : 'white' %>">
    <td>
      <ul class="media-info display-inline-flex">
        <% item.good.production_parts.includes(:part).each do |production_part| %>
          <li>
            <span><%= production_part.part.name %></span>
            <% if production_part.number.to_i > 1 %>
              <span>x <%= production_part.number %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </td>
    <td class="text-right">
      <%= render partial: 'cart_new', locals: { item: @cart.init_cart_item(params, good_id: item.good_id), item_con: 'trade/my/items', cart: @cart } %>
    </td>
  </tr>
<% end %>
</table>